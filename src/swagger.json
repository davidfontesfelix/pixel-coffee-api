{
  "openapi": "3.0.0",
  "info": {
    "title": "API PixelCoffee",
    "description": "Api feita para o projeto PixelCoffee",
    "version": "1.3.2"
  },
  "servers": [
    {
      "url": "http://localhost:3001/",
      "description": "URL de desenvolvimento"
    }
  ], 
  "tags": [
    {"name": "menu"},
    {"name": "sales"}
  ],
  "paths": {
    "/menu/coffees": {
      "get": {
        "summary": "entrega o catalogo de caf√©s",
        "tags": ["menu"]
      }
    },
    "/menu/takeout/ticket": {
      "get": {
        "summary": "entrega o ticket do pedido para viagem",
        "tags": ["menu"]
      }
    },
    "/menu/takeout-order" : {
      "post": {
        "summary": "Criar pedido para viajem",
        "tags": ["menu"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                  "items": {
                    "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "quantity": {
                          "type": "integer"
                        },
                        "id": {
                          "type": "integer"
                        },
                        "price": {
                          "type": "number"
                        }
                      },
                    "required": ["name", "quantity", "id", "price"]
                }
              }
            }
          }
        }
      }
    },
    "/menu/table-order" : {
      "post": {
        "summary": "Criar pedido para viajem",
        "tags": ["menu"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "table": {
                  "type": "string"
                },
                "type": "array",
                  "items": {
                    "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "quantity": {
                          "type": "integer"
                        },
                        "id": {
                          "type": "integer"
                        },
                        "price": {
                          "type": "number"
                        }
                      },
                    "required": ["name", "quantity", "id", "price"]
                }
              }
            }
          }
        }
      }
    },
    "/sales-control/takeout/orders": {
      "get": {
        "summary": "mostra todos os pedidos para viajem",
        "tags": ["sales"]
      }
    },
    "/sales-control/table/orders": {
      "get": {
        "summary": "mostra todos os pedidos para mesas",
        "tags": ["sales"]
      }
    },
    "/takeout/was-paid/:id": {
      "delete": {
        "summary": "deleta o pedido para viajem",
        "tags": ["sales"]
      }
    },
    "/table/was-paid/:id": {
      "delete": {
        "summary": "deleta um pedido para mesa",
        "tags": ["sales"]
      }
    }

  }
}